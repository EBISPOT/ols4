#!/bin/bash

echo Loading data...
./create_datafiles.sh file:///mnt/config.json /tmp/out $@
./load_into_neo4j.sh /opt/neo4j /tmp/out
rm -rf /opt/solr/server/solr/*
cp -r /opt/dataload/solr_config/* /opt/solr/server/solr/
